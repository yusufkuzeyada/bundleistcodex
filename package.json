{
  "name": "netlify-deployment-clean-local",
  "version": "1.0.0",
  "private": true,
  "description": "Local development workspace for Netlify static deployment artifact",
  "scripts": {
    "prepare:static": "node ./scripts/prepare-static-workspace.mjs",
    "format:static": "prettier --write \"site/**/*.js\" \"site/**/*.css\" \"site/**/*.html\"",
    "setup:static": "npm run prepare:static && npm run format:static",
    "check:syntax": "node ./scripts/validate-syntax.mjs",
    "lint": "eslint --max-warnings=0 \"netlify/functions/**/*.js\" \"scripts/**/*.mjs\" \"site/dashboard/assets/debug-tools.js\"",
    "test": "node --test",
    "verify": "npm run check:syntax && npm run lint && npm test",
    "hooks:install": "node ./scripts/install-git-hooks.mjs",
    "protect:branch": "node ./scripts/configure-branch-protection.mjs",
    "protect:branch:apply": "node ./scripts/configure-branch-protection.mjs --apply",
    "migrate:codes": "node ./scripts/migrate-entity-codes.mjs",
    "sync:completed": "node ./scripts/sync-completed-statuses.mjs",
    "reset:seed:orders": "node ./scripts/reset-and-seed-orders.mjs",
    "dev:functions": "npx netlify-cli@latest dev --port 4173 --offline",
    "dev": "serve -l 4173 site",
    "dev:open": "serve -l 4173 -o site",
    "start": "npm run dev",
    "stop": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/stop-dev.ps1",
    "health": "node -e \"fetch('http://127.0.0.1:4173').then((r)=>{console.log('status',r.status);process.exit(r.ok?0:1)}).catch(()=>process.exit(1))\""
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "serve": "^14.2.5"
  }
}

